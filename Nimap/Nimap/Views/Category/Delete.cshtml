@model Nimap.Controllers.Category

<style>
    body {
        background-color: #f2f2f2;
    }

    h2 {
        text-align: center;
    }

    h3 {
        text-align: center;
    }

    h4 {
        background-color: black;
        color: white;
        padding: 5px;
    }

    dl {
        text-align: center;
    }

    dt {
        background-color: black;
        color: white;
        padding: 5px;
    }

    .form-actions {
        text-align: center;
    }

    .btn-default {
        background-color: black;
        color: white;
        border: none;
    }
</style>

<div>
    <h4 class="text-center">Delete A Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>

   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-dark" />
            &nbsp;&nbsp;
            <a href="@Url.Action("", "Category")" class="btn btn-dark">Back</a>
        </div>
    }

</div>
