@model Nimap.Models.PagedProductCategoryViewModel

@{
    ViewBag.Title = "Home Page";
}
<style>
    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table th,
        .table td {
           
            text-align: left;
            border: 1px solid black;
            border-collapse: collapse;
            padding: 10px;
        }
        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

            .table th.border-right,
            .table td.border-right {
                border-right: 1px solid #ddd;
            }
    .table th, .table td {
        padding: 20px;
    }
        .table thead th {
            background-color: #333;
            color: #fff;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f5f5f5;
    }

    .text-center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .page-link {
        display: inline-block;
        margin: 0 5px;
        padding: 5px 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        text-decoration: none;
        color: #333;
    }

        .page-link:hover {
            background-color: #f5f5f5;
        }

        .page-link.active {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
        }
</style>
<h2 class="text-center">Product List</h2>
<br>

<div class="text-center" >
    <a href="@Url.Action("", "Product")" class="btn btn-dark">Add Product</a>
    &nbsp;&nbsp;&nbsp;
    <a href="@Url.Action("", "Category")" class="btn btn-dark">Add Category</a>
</div>
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>CategoryId</th>
            <th>CategoryName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.CategoryId</td>
                <td>@product.CategoryName</td>
            </tr>
        }
    </tbody>
</table>

<br>

<div class="pagination text-center">
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a href="@Url.Action("Index", new { page = i })" class="page-link">@i</a>
    }
</div>


